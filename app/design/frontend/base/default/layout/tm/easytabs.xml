<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">

    <default>
        <reference name="head">
            <action method="addItem" ifconfig="tm_easytabs/general/enabled">
                <type>skin_css</type>
                <name>tm/easytabs/css/styles.css</name>
            </action>
            <action method="addItem" ifconfig="tm_easytabs/general/enabled">
                <type>skin_js</type>
                <name>tm/easytabs/js/prototype.sticky-kit.js</name>
                <params>defer</params>
            </action>
            <action method="addItem" ifconfig="tm_easytabs/general/enabled">
                <type>skin_js</type>
                <name>tm/easytabs/js/main.js</name>
                <params>defer</params>
            </action>
        </reference>
        <reference name="tmamp.styles">
            <action method="addItem"><name>tm/easytabs/css/tmamp</name></action>
        </reference>
    </default>

    <catalog_product_view>
        <reference name="head">
            <action method="addItem" ifconfig="tm_easytabs/general/enabled">
                <type>skin_js</type>
                <name>tm/easytabs/js/product.js</name>
                <params>defer</params>
            </action>
        </reference>
        <reference name="product.info.additional">
            <block type="easytabs/product" name="product.info.tabs" as="info_tabs">
                <action method="setTemplate" ifconfig="tm_easytabs/general/enabled">
                    <template>tm/easytabs/tabs.phtml</template>
                </action>
            </block>
        </reference>
    </catalog_product_view>

    <tmamp_catalog_product_view>
        <reference name="product.info">
            <block type="easytabs/product" name="product.info.tabs" as="product_additional_data">
                <action method="setTemplate" ifconfig="tm_easytabs/general/enabled">
                    <template>tm/easytabs/tabs.phtml</template>
                </action>
            </block>
        </reference>
    </tmamp_catalog_product_view>

</layout>
