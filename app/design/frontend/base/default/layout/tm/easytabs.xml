<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem" ifconfig="tm_easytabs/general/enabled">
                <type>skin_css</type>
                <name>css/tm/easytabs.css</name>
            </action>
            <action method="addItem" ifconfig="tm_easytabs/general/enabled">
                <type>skin_js</type>
                <name>js/tm/easytabs.js</name>
                <params>defer</params>
            </action>
        </reference>
    </default>

    <catalog_product_view>
        <reference name="product.info.additional">
            <block type="easytabs/tabs" name="product.info.tabs" as="info_tabs">
                <action method="setTemplate" ifconfig="tm_easytabs/general/enabled">
                    <template>tm/easytabs/tabs.phtml</template>
                </action>
            </block>
        </reference>
        <reference name="additional_tabbed">
            <action method="setIsGrouped">
                <status>1</status>
            </action>
        </reference>
    </catalog_product_view>
</layout>
